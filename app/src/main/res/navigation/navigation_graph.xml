<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.home.HomeFragment"
        android:label="fragment_title_screen"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeScreen_to_charactersScreen"
            app:destination="@id/charactersFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>

        <action
            android:id="@+id/action_homeScreen_to_episodesScreen"
            app:destination="@id/episodesFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>

        <action
            android:id="@+id/action_homeScreen_to_locationsScreen"
            app:destination="@id/locationsFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.characters.list.CharactersFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.characters.details.CharacterDetailsFragment"

        android:label="Character Detail"
        tools:layout="@layout/fragment_character_details" />

    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.episodes.list.EpisodesFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_episodes" >
        <action
            android:id="@+id/action_episodesFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.episodes.details.EpisodeDetailsFragment"

        android:label="Episode Detail"
        tools:layout="@layout/fragment_episode_details" />

    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.locations.list.LocationsFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_locations" >
        <action
            android:id="@+id/action_locationFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.denofdevelopers.mvvm_hilt_coroutines_livedata_room_projectone.ui.locations.details.LocationDetailsFragment"

        android:label="Episode Detail"
        tools:layout="@layout/fragment_location_details" />

</navigation>